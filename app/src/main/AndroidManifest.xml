<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.denticaree">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DentiCaree">
        <activity
            android:name=".MainActivity"
            android:exported="true"> <!-- Set to true because it's the launcher activity -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:exported="false" /> <!-- Not a launcher, internal use only -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false" /> <!-- Internal use after login -->
        <activity
            android:name=".BookingActivity"
            android:exported="false" /> <!-- Internal use for booking -->
        <activity
            android:name=".DoctorsActivity"
            android:exported="false" /> <!-- Internal use for viewing doctors -->
    </application>
</manifest>