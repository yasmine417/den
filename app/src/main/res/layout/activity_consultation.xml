<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#F5F7FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:elevation="4dp"
        android:padding="24dp"
        android:clipToPadding="false"
        android:layout_margin="12dp"
        android:backgroundTint="#FFFFFF"
        android:layout_gravity="center"
        android:scrollbars="none"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:shape="rectangle"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_white_bg">

        <TextView
            android:id="@+id/tvInfos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Infos Patient"
            android:textSize="22sp"
            android:textStyle="bold"

            android:textColor="#2C3E50" />

        <EditText
            android:id="@+id/etMotif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Motif de consultation"
            android:layout_marginTop="20dp"
            android:padding="12dp"
            android:background="@drawable/edittext_bg"
            android:textColor="#222"
            android:drawableStart="@drawable/assignment"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etTraitement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Traitement prescrit"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            android:background="@drawable/edittext_bg"
            android:textColor="#222"
            android:drawableStart="@drawable/medical_services"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnTerminer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marquer comme terminÃ©"
            android:layout_marginTop="24dp"

            android:textColor="#FFF"
            android:padding="14dp"
            android:textAllCaps="false"
            android:background="@drawable/rounded_button"/>

        <Button
            android:id="@+id/btnFollowUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rendez-vous de suivi"
            android:layout_marginTop="12dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFF"
            android:padding="14dp"
            android:textAllCaps="false"
            android:background="@drawable/button_rounded"/>
    </LinearLayout>
</ScrollView>
